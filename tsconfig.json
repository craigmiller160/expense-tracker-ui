{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": false,
    "module": "es2022"
  },
  // This is just here for cypress
  "ts-node": {
    "compilerOptions": {
      "module": "es2022",
      "moduleResolution": "node"
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "./vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "build",
    ".yalc"
  ]
}
